-- QUERYING ALL ROWS AND COLUMNS OF THE TABLE
SELECT * FROM TABLE_NAME;


--  Specifying the columns you want to query and retrieving all rows from the table
SELECT NR_TABLE, NM_TABLE, VL_TABLE_SIMPLE
  FROM TABLE_NAME;


-- Specifying the columns you want to query and filtering 
SELECT NR_TABLE, CD_TEBLE,
       NM_TABLE, VL_TABLE_SIMPLE
FROM TABLE_NAME
WHERE CD_TABLE = 3;


-- RETRIEVING DEPARTMENTS (WITHOUT REPETITIONS) THAT HAVE
SELECT DISTINCT CD_TABLE FROM TABLE_NAME;
-- OR
SELECT UNIQUE CD_TABLE FROM TABLE_NAME;


-- EXAMPLE OF QUERY USING ARITHMETIC OPERATORS
SELECT NR_TABLE, NM_TABLE,
VL_TABLE_MENSAL,
VL_TABLE_MENSAL * 1.05
FROM TABLE_NAME;


-- EXAMPLES FOR CALLING COLUMN NICKNAMES
SELECT NR_TABLE,
 NM_TABLE FUNCIONARIO,
 VL_TABLE_MENSAL "MONTHLY SALARY",
 VL_TABLE_MENSAL * 1.05 AS "ADJUSTED SALARY"
  FROM TABLE_NAME;


-- PRESENTING RESULTS IN ORDER
-- ORDER BY ASC
SELECT CD_TABLE, NM_TABLE
FROM TABLE_NAME
ORDER BY NM_TABLE;


-- PRESENTING RESULTS IN ORDER
-- ORDER BY DESC
SELECT CD_TABLE, NM_TABLE
FROM TABLE_NAME
ORDER BY NM_TABLE;


-- PRESENTING RESULTS IN AN ORDERED FORM ORDER BY USING NUMBERS THAT REPRESENT THE POSITION OF THE COLUMNS IN THE SELECT
SELECT NR_TABLE, CD_TABLE
 NM_TABLE, VL_TABLE_MENSAL
FROM TABLE_NAME
ORDER BY 2 ASC, 4 DESC;


-- PRESENTING RESULTS IN AN ORDERED FORM
-- ORDER BY USING COLUMN NICKNAMES
SELECT NR_TABLE "MATRICULA",
       NM_TABLE "NOME",
       VL_TABLE_MENSAL "MONTHLY SALARY",
       VL_TABLE_MENSAL * 1.05 "ADJUSTED SALARY"
  FROM TABLE_NAME
ORDER BY "ADJUSTED SALARY" DESC;


-- FILTERING BY NUMBERS
SELECT NR_TABLE, NM_TABLE, VL_TABLE_MENSAL 
  FROM TABLE_NAME 
WHERE VL_TABLE_MENSAL > 1500.50;


-- FILTERING BY TEXT (CHARACTER STRING)
SELECT NR_TABLE, NM_TABLE
 FROM TABLE_NAME
WHERE NM_TABLE = 'JOAO DA SILVA';


-- USING TEXT CONVERSION
SELECT NR_TABLE, NM_TABLE
FROM TABLE_NAME
WHERE UPPER(NM_TABLE) = 'JOAO DA SILVA';
-- OR
SELECT NR_TABLE, NM_TABLE
FROM TABLE_NAME
WHERE LOWER(NM_TABLE) = 'joao da silva';


-- FILTERING BY DATE
SELECT NR_TABLE, NM_TABLE, DT_TABLE 
FROM TABLE_NAME 
WHERE DT_TABLE >= TO_DATE('20/09/2025','DD/MM/YYYY');


-- AND LOGICAL OPERATOR -> MUST MEET BOTH CONDITIONS TO RETRIEVE VALUES
SELECT NR_TABLE, NM_TABLE, CD_TABLE, DT_TABLE
FROM TABLE_NAME
WHERE DT_TABLE >= TO_DATE('20/09/2025','DD/MM/YYYY')
AND CD_TABLE = 3;


--LOGICAL OR OPERATOR -> MUST MEET ANY OF THE CONDITIONS TO RETRIEVE THE VALUES
SELECT NR_TABLE, NM_TABLE,
CD_TABLE, VL_TABLE_MENSAL
FROM TABLE_NAME
WHERE CD_TABLE = 4
OR VL_TABLE_MENSAL > 3000;


-- NOT OPERATOR
SELECT NR_TABLE, NM_TABLE, 
CD_TABLE, VL_TABLE_MENSAL 
FROM TABLE_NAME 
WHERE NOT CD_TABLE = 4;


-- OPERATOR BETWEEN
SELECT NR_TABLE, NM_TABLE, 
       CD_TEBLE, DT_TABLE
  FROM TABLE_NAME
WHERE DT_TABLE BETWEEN TO_DATE('01/01/2025','DD/MM/YYYY') 
  AND TO_DATE('30/12/2025','DD/MM/YYYY');


-- OPERATOR IN
SELECT NR_TABLE, NM_TABLE, CD_TEBLE
  FROM   TABLE_NAME
 WHERE  CD_TEBLE IN (1,2,3);


-- OPERATOR NOT IN
SELECT NR_TABLE, NM_TABLE, CD_TEBLE
  FROM   TABLE_NAME
 WHERE  CD_TEBLE NOT IN (1,2,3);


-- OPERADOR IN (TO_CHAR TRANSFORMS THE INFORMATION CONTENT INTO A STRING)
SELECT  NR_TABLE ,      
  DT_TABLE ,
  VL_TABLE_MENSAL 
FROM    TABLE_NAME
WHERE   TO_CHAR(DT_TABLE,'YYYY') IN ('2012','2014');


-- OPERATOR IS NOT NULL
SELECT CD_PROJETO, NM_PROJETO, DT_START, DT_END 
FROM   T_SIP_PROJETO 
WHERE DT_TERMINO IS NOT NULL;


-- OPERATOR LIKE
SELECT CD_TEBLE, NM_TABLE
FROM   TABLE_NAME
WHERE  NM_TABLE LIKE '%ME%';


-- TO DISPLAY THE NAMES AND SALARIES OF THE THREE HIGHEST PAID EMPLOYEES IN THE EMPLOYEE TABLE.
SELECT  ROWNUM as RANK , 
               NM_FUNCIONARIO , 
               VL_SALARIO_MENSAL
FROM 
    (    SELECT NM_FUNCIONARIO ,
                VL_SALARIO_MENSAL
           FROM T_SIP_FUNCIONARIO
       ORDER BY VL_SALARIO_MENSAL DESC
    )
WHERE ROWNUM <= 3;


-- VIEW THE CURRENT NLS ATTRIBUTE CONFIGURATION CURRENT FOR YOUR SESSION
SELECT * FROM V$NLS_PARAMETERS;


-- To change the display format of a date, use the syntax:
ALTER SESSION SET NLS_DATE_FORMAT = 'DD/MM/YYYY';


-- example of a query used in everyday life
SELECT 	NR_MATRICULA   ,
         CD_DEPTO       ,
         NM_FUNCIONARIO ,
         DT_NASCIMENTO  ,
         DT_ADMISSAO    ,
         VL_SALARIO_MENSAL
  FROM 	T_SIP_FUNCIONARIO
 WHERE   DT_NASCIMENTO 
             BETWEEN 
                 TO_DATE('01/01/1980','DD/MM/YYYY')  
             AND
                 TO_DATE('30/12/2010','DD/MM/YYYY')                   
         AND
          DT_ADMISSAO > TO_DATE('01/01/2013','DD/MM/YYYY')  
         AND VL_SALARIO_MENSAL < 2300 
         AND NOT CD_DEPTO = 3 ;
