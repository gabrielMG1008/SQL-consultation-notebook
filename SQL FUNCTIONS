-- EXAMPLE – LOWER(), UPPER(), and INITCAP() FUNCTIONS
SELECT F.NM_EMPLOYEE   "AS SAVED",
LOWER(F.NM_EMPLOYEE)   "LOWERCASE (LOWER)",
UPPER(F.NM_EMPLOYEE)   "UPPERCASE (UPPER)",
INITCAP(F.NM_EMPLOYEE) "UPPERCASE (INITCAP)"
FROM T_SIP_EMPLOYEE F;


-- EXAMPLE – ASCII() and CHR() FUNCTIONS
SELECT ASCII('R'),
CHR(82)
FROM DUAL;


-- EXAMPLE – CONCAT() FUNCTION
SELECT CONCAT(CONCAT(F.NR_MATRICULA,'-'),F.NM_EMPLOYEE)
FROM T_SIP_FUNCIONARIO F;


-- EXAMPLE – INSTR() FUNCTION
SELECT F.NM_EMPLOYEE ,
INSTR(F.NM_EMPLOYEE,'A') ,
INSTR(F.NM_EMPLOYEE,'JOS') ,
INSTR(F.NM_EMPLOYEE,'A',3) ,
INSTR(F.NM_EMPLOYEE,'A',3,2)
FROM T_SIP_EMPLOYEE F;


-- EXAMPLE – LENGTH() FUNCTION
SELECT F.NM_EMPLOYEE,
LENGTH(F.NM_EMPLOYEE)
FROM T_SIP_EMPLOYEE F;


-- EXAMPLE – LENGTH() FUNCTION
SELECT F.NM_EMPLOYEE,
LENGTH(F.NM_EMPLOYEE)
FROM T_SIP_EMPLOYEE F;


-- EXAMPLE – RPAD() and LPAD() FUNCTIONS
SELECT F.NM_EMPLOYEE ,
F.VL_SALARY ,
RPAD(F.NM_EMPLOYEE,60) ,
RPAD(F.NM_EMPLOYEE,60,'.') ,
LPAD(F.VL_SALARY,10,'*')
FROM T_SIP_EMPLOYEE F;


-- EXAMPLE – RTRIM(), LTRIM(), AND TRIM() FUNCTIONS
SELECT D.NM_DEPTO ,
LTRIM(D.NM_DEPTO) ,
TRIM(D.NM_DEPTO)
FROM T_SIP_DEPARTAMENTO D;


-- EXAMPLE – NVL() and NVL2() FUNCTIONS
SELECT F.DT_NASCIMENTO ,
NVL(F.DT_NASCIMENTO,'01/01/1900') ,
NVL2(F.DT_NASCIMENTO,SYSDATE,'01/01/1900')
FROM T_SIP_FUNCIONARIO F;


-- EXAMPLE – REPLACE() FUNCTION
SELECT F.NM_EMPLOYEE,
REPLACE(F.NM_EMPLOYEE,'A','*')
FROM T_SIP_EMPLOYEE F;


-- EXAMPLE – SUBSTR() FUNCTION
SELECT F.NM_EMPLOYEE ,
SUBSTR(F.NM_EMPLOYEE,3) ,
SUBSTR(F.NM_EMPLOYEE,3, 5)
FROM T_SIP_EMPLOYEE F;


-- EXAMPLE – NUMERICAL FUNCTIONS
SELECT F.VL_SALARY ,
ROUND(F.VL_SALARY) ,
ROUND(F.VL_SALARY,1) ,
TRUNC(F.VL_SALARY) ,
TRUNC(F.VL_SALARY,1) ,
MOD(F.VL_SALARY,3) ,
ABS(F.VL_SALARY) ,
SQRT(F.VL_SALARY)
FROM T_SIP_FUNCIONARIO F;


-- EXAMPLE – CONVERSION FUNCTIONS – TO_CHAR()
SELECT F.VL_SALARIO ,
       TO_CHAR(F.VL_SALARIO, 'L9999999.99') "LOCAL CURRENCY SYMBOL" ,
       TO_CHAR(F.VL_SALARIO, 'C99,999.99') "ISO CURRENCY SYMBOL" ,
       TO_CHAR(F.VL_SALARIO, '99,999.99') ,
       F.NR_MATRICULA ,
       TO_CHAR(F.NR_MATRICULA, '0099999')
FROM T_SIP_FUNCIONARIO F;


-- EXAMPLE – CONVERSION FUNCTIONS – CAST()
-- CONVERT LITERAL VALUES TO SPECIFIC TYPES
SELECT
     CAST( 12345.67 AS VARCHAR2(10) ) ,
     CAST( '29/09/2013' AS DATE ) ,
     CAST( 12345.678 AS NUMBER(10,2))
FROM DUAL;


-- EXAMPLE – DATE FUNCTIONS – ADD_MONTHS()
SELECT SYSDATE "CURRENT DATE",
       ADD_MONTHS(SYSDATE, 1) "NEXT MONTH",
       ADD_MONTHS(SYSDATE, -1) "PREVIOUS MONTH"
FROM DUAL;


-- EXAMPLE – DATE FUNCTIONS – LAST_DAY()
SELECT SYSDATE "CURRENT DATE", 
       LAST_DAY(SYSDATE) "DATE ​​WITH LAST DAY OF THE MONTH"
FROM DUAL;


-- EXAMPLE – DATE FUNCTIONS – MONTHS_BETWEEN()
SELECT DT_ADMISSAO, 
       SYSDATE, 
       MONTHS_BETWEEN(SYSDATE, DT_ADMISSAO) , 
       TRUNC(MONTHS_BETWEEN(SYSDATE, DT_ADMISSAO)) || 'MONTHS' 
FROM T_SIP_FUNCIONARIO;
